[Unit]
Description=Super Bowl Props Web Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/superbowl-props
Environment="PATH=/opt/superbowl-props/venv/bin"
ExecStart=/opt/superbowl-props/venv/bin/gunicorn --workers 2 --bind 127.0.0.1:5000 app:app
Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/opt/superbowl-props/data

[Install]
WantedBy=multi-user.target
